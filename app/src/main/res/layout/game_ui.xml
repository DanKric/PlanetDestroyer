                android:padding="@dimen/smaller_images"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/game_IMG_meteor16"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/smaller_images"
                android:src="@drawable/comet" />

            <ImageView
